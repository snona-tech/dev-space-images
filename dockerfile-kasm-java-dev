ARG BASE_TAG="develop"
ARG BASE_IMAGE="core-ubuntu-jammy"
FROM kasmweb/$BASE_IMAGE:$BASE_TAG

USER root

ENV HOME /home/kasm-default-profile
ENV STARTUPDIR /dockerstartup
WORKDIR $HOME

### Envrionment config
ENV DEBIAN_FRONTEND noninteractive
ENV KASM_RX_HOME $STARTUPDIR/kasmrx
ENV INST_SCRIPTS $STARTUPDIR/install
ENV DONT_PROMPT_WSL_INSTALL "No_Prompt_please"

RUN apt-get update
RUN apt-get upgrade -y
RUN apt-get update && apt-get install -y sudo && echo "kasm-user  ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers

RUN sudo chmod 777 /home
RUN sudo chown kasm-user:kasm-user /home

### Install Tools
COPY ./src/ubuntu/install/tools $INST_SCRIPTS/tools/
RUN bash $INST_SCRIPTS/tools/install_tools_deluxe.sh  && rm -rf $INST_SCRIPTS/tools/

# Install Utilities
COPY ./src/ubuntu/install/misc $INST_SCRIPTS/misc/
RUN bash $INST_SCRIPTS/misc/install_tools.sh && rm -rf $INST_SCRIPTS/misc/

# Install Google Chrome
COPY ./src/ubuntu/install/chrome $INST_SCRIPTS/chrome/
RUN bash $INST_SCRIPTS/chrome/install_chrome.sh  && rm -rf $INST_SCRIPTS/chrome/

### Install Visual Studio Code
COPY ./src/ubuntu/install/vs_code $INST_SCRIPTS/vs_code/
RUN bash $INST_SCRIPTS/vs_code/install_vs_code.sh  && rm -rf $INST_SCRIPTS/vs_code/

### Install Java
RUN apt-get update && apt-get install -y default-jdk default-jre

### Install IntelliJ
RUN wget https://download-cdn.jetbrains.com/idea/ideaIC-2023.2.2.tar.gz
RUN sudo mkdir -p /opt/idea && sudo tar -xf ideaIC-*.tar.gz -C /opt/idea --strip-components 1
RUN sudo ln -s /opt/idea/bin/idea.sh /usr/local/bin/idea
COPY ./src/ubuntu/install/shortcut/IntelliJ_IDEA.desktop $HOME/Desktop/IntelliJ_IDEA.desktop
RUN rm -f ideaIC-*.tar.gz

#ADD ./src/common/scripts $STARTUPDIR
RUN $STARTUPDIR/set_user_permission.sh $HOME

RUN chown 1000:0 $HOME

ENV HOME /home/kasm-user
WORKDIR $HOME
RUN mkdir -p $HOME && chown -R 1000:0 $HOME

USER 1000

CMD ["--tail-log"]
